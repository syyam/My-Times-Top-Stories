<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NyTimesTopStories" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NyTimesTopStories.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NYTimesNews.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NYTimesNews.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.NYTimesNews.SearchStyle" parent="Theme.NYTimesNews.PopupOverlay">
        <item name="android:editTextColor">?colorOnPrimary</item>
        <item name="android:textColorHint">?colorOnPrimary</item>
        <item name="android:searchIcon">@android:drawable/ic_menu_search</item>
        <item name="navigationIconTint">?colorOnPrimary</item>
    </style>

</resources>